<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="222dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_noor_sourya" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp" >

        <TextView
            android:id="@+id/news_feed"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="#60aec2" />

        <Button
            android:id="@+id/paginate_left_news"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/news_feed"
            android:background="@drawable/paginate_left" />

        <Button
            android:id="@+id/paginate_right_news"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/news_feed"
            android:background="@drawable/paginate_right" />
    </RelativeLayout>
    
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        layout="@layout/bottom_main_layout"
         /> 

</LinearLayout>